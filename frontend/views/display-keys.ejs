<%- include("partials/header") %>
    <link rel="stylesheet" href="/index2.css" />
    <%- include("partials/navbar") %>
        <style>
            body {
                background-color: rgb(6, 6, 39);
            }
        </style>

        <div style="text-align: center; margin: 30px;">
            <div style="color: aliceblue;" class="ui icon header">
                <i class="hospital icon"></i> YOUR <span style="color:gold;">KEYS</span>
            </div>
            <div style="text-align: center;" class="content">
                <p style="color: aliceblue;">These are your keys please take a screenshot <i style="color:#5CDB95;" class="camera icon"></i>and store them securely for future reference.</p>
                <br>
                <label style="color: rgb(60, 241, 130)" class="ui header">
            <h3>Private Key</h3>
        </label>
                <h6 style="color: aliceblue;" id="privateKeyDisplay"><%= privateKey %></h6>
                <label style="color: rgb(60, 241, 130)" class="ui header">
            <h3>Public Key</h3>
        </label>
                <h6 style="color: aliceblue;" id="publicKeyDisplay"><%= publicKey %></h6>
                <label style="color: rgb(60, 241, 130)" class="ui header">
            <h3>Address</h3>
        </label>
                <h6 style="color: aliceblue;" id="address"><%= address %></h6>
            </div>
            <div style=" margin: 40px;" class="actions">
                <a href="/hospitals/dashboard" class="ui circular green basic inverted  button">
                    <i class="checkmark icon">
                        </i>Dashboard
                </a>
            </div>
        </div>


<%- include("partials/footer") %>
    <script>
        $('.message .close').on('click', function() {
            $(this).closest('.message').transition('fade');
        });
    </script>
    <script src="/bundle.js"></script>

    </body>

    </html>