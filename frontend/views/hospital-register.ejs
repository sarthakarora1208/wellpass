<%- include("partials/header") %>
    <link rel="stylesheet" href="/index2.css" />
    <%- include("partials/navbar") %>
    </header>
        <!-- FORM -->
        <div class="form1" style="margin: 20px;">
            <div class="ui raised segment dimmable">
                <%- include("partials/messages") %>
                    <div class="ui inverted dimmer">
                        <div class="content">
                            <div class="ui text loader">Loading</div>
                        </div>
                    </div>
                    <h2 class="ui header"><i aria-hidden="true" style="color: #06376B;" class="hospital icon"></i>Register Hospital
                    </h2>
                    <p style="color: black;"> Welcome to WellPass, register as a hospital owner now! </p>
                    <div class="ui divider"></div>
                    <form style="min-width:400px" id="myForm" action="/auth/register" method="POST" class="ui form">
                        <div class="field">
                            <div class="field"><label class="ui header">Name</label>
                                <div class="ui left icon input"><input style="padding: 0;" aria-invalid="true" placeholder="Owner's Name" name="name" type="text" value="<%= typeof name !== 'undefined' ? name : '' %>" required><i aria-hidden="true" class="user icon"></i></div>
                            </div>
                        </div>
                        <div class="field">
                            <div class="field"><label class="ui header">Email Address</label>
                                <div class="ui left icon input"><input id="email" style="padding: 0;" aria-invalid="true" placeholder="Owner's Email" name="email" type="email" value="<%= typeof email !== 'undefined' ? email : '' %>" required><i aria-hidden="true" class="mail icon"></i></div>
                            </div>
                        </div>
                        <div class="field">
                            <div class="field"><label class="ui header">Password</label>
                                <div class="ui left icon input"><input id="pwd" style="padding: 0;" aria-invalid="true" placeholder="Enter Password" name="password" type="password" value="<%= typeof password != 'undefined' ? password : '' %>" required><i aria-hidden="true" class="lock icon"></i></div>
                            </div>
                        </div>
                        <div class="field">
                            <div class="field"><label class="ui header">Confirm Password</label>
                                <div class="ui left icon input"><input style="padding: 0;" aria-invalid="true" placeholder="Re-enter Password" name="passwordConfirmation" type="password" value="<%= typeof passwordConfirmation != 'undefined' ? passwordConfirmation : '' %>" required>
                                    <i aria-hidden="true" class="lock icon"></i>
                                </div>
                            </div>
                        </div>
                        <div class="inline fields">

                            <div class="field">
                                <input id="owner" name="role" type="hidden" value="owner">
                            </div>

                        </div>
                        <button style="background-color:#06376B; color: white;" type="submit" class="circular ui button">
                          Register Hospital
                        </button>
                    </form>

                        <p style="color: black;">Already have an account? <a style="color:#06376B;" href="/auth/login"> Login</a>
                        </p>
                <a style="color:#06376B;" href="/auth/user-register"
                    >Register as user?</a>
            </div>
        </div>
        </div>

<%- include("partials/footer") %>
<script>
    $('.message .close').on('click', function() {
        $(this).closest('.message').transition('fade');
    });
</script>
</body>

</html>