<%- include("partials/header") %>
    <link rel="stylesheet" href="/admin.css" />
    <%- include("partials/navbar2") %>
    </header>
    <div class="form1" style="margin-top: 0px;">
        <div class="ui raised segment dimmable">
            <div class="ui inverted dimmer">
                <div class="content">
                    <div class="ui text loader">Loading</div>
                </div>
            </div>
            <h2 class="ui header"><i aria-hidden="true" style="color: red;" class="plus icon"></i>Add Hospital</h2>
            <p style="color: black;"> Add Hospital to get the information about a particular patient and to generate its well pass. </p>
            <div class="ui divider"></div>
            <form action="/hospitals/add-hospital" method="POST" class="ui form">
                <div class="field">
                    <div class="field"><label class="ui header">Name</label>
                        <div class="ui left icon input"><input aria-invalid="true" style="padding: 0;" placeholder="Enter Name of Hospital" name="name" type="text" value="<%= typeof name != 'undefined' ? name : '' %>"><i aria-hidden="true" class="user icon"></i></div>
                    </div>
                </div>
                <div class="field">
                    <div class="field"><label class="ui header">Email Address</label>
                        <div class="ui left icon input"><input aria-invalid="true" style="padding: 0;" placeholder="Enter Hospital's associated Email" name="email" type="email" value="<%= typeof email != 'undefined' ? email : '' %>"><i aria-hidden="true" class="mail icon"></i></div>
                    </div>
                </div>
                <div class="field">
                    <div class="field"><label class="ui header">Registration Number</label>
                        <div class="ui left icon input"><input aria-invalid="true" style="padding: 0;" placeholder="Enter Hospital's Registration Number" name="registrationNumber" type="number" value="<%= typeof registrationNumber != "undefined" ? registrationNumber : '' %>"><i aria-hidden="true" class="plus icon"></i></div>
                    </div>
                </div>
                <div class="field">
                    <div class="field"><label class="ui header">Website Name</label>
                        <div class="ui left icon input"><input aria-invalid="true" style="padding: 0;" placeholder="Enter Hospital's associated website" name="website" type="text" value="<%= typeof website != "undefined" ? website : '' %>"><i aria-hidden="true" class="circle icon"></i></div>
                    </div>
                </div>
                <div class="field">
                    <div class="field"><label class="ui header">Phone Number</label>
                        <div class="ui left icon input"><input aria-invalid="true" style="padding: 0;" placeholder="Enter Hospital's Phone Number" name="phone" type="text" value="<%= typeof phone != "undefined" ? phone : '' %>"><i aria-hidden="true" class="phone icon"></i></div>
                    </div>
                </div>
                <div class="field">
                    <div class="field"><label class="ui header">Address</label>
                        <div class="ui left icon input"><input aria-invalid="true" style="padding: 0;" placeholder="Enter Address of the Hospital" name="address" type="text" value="<%= typeof address != "undefined" ? address: '' %>"><i aria-hidden="true" class="hospital icon"></i></div>
                    </div>
                </div>
                <div class="field">
                    <div class="field"><label class="ui header">Description</label>
                        <textarea name="description" placeholder="Enter Hopsital Description..."></textarea>
                    </div>
                </div>
                <input id="publicKey" type="hidden" aria-invalid="true"  name="publicKey" type="text" value="<%= user.publicKey %>">
                <button type="submit" class="ui circular red button "><div class="content">Add Hospital</div></button></form>
        </div>
    </div>


<%- include("partials/footer") %>
<script src="/dashboardUser.js "></script>
</body>
</html>